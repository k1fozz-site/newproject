block content
    header 
        .dota-box 
            .container-xl.p-0 
                .container
                    .row 
                        .col-xxl-6.col.xl-6.col-nd-12 
                            .hero-section.pt-5 
                                h1.hero-title.text-white.n-0 Dota 2
